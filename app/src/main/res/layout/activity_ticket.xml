<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.per.maka.final_redes_app.Ticket"
    android:background="@drawable/bgticket">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_adidas"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logoadidas"
        />

    <!--Ticket-->

    <RelativeLayout
        android:id="@+id/bonus_ticket"
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:background="@drawable/ticket"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo_adidas">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enjoy your promo code"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:layout_marginTop="43dp"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/promoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="I Z P 2 3 4 5 T W J 7 0 0 K 1 4"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"/>


    </RelativeLayout>

    <!--Boton para compartir-->
    <Button
        android:id="@+id/shareTicket"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bonus_ticket"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="share with friends"
        android:textColor="@color/colorLight"/>


</RelativeLayout>
