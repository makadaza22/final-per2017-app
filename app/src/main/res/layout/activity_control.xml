<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diseno.adidas_final.Control"
    android:background="@drawable/bgeditor">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/logoGame"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:src="@drawable/logologin"
        />

    <!--Grid botones-->

    <GridLayout
        android:layout_below="@id/logoGame"
        android:layout_marginTop="60dp"
        android:id="@+id/controles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3" android:rowCount="3">

        <Button android:id="@+id/up"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:background="@drawable/up"
            android:onClick="UP"/>

        <Button android:id="@+id/left"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:background="@drawable/left"
            android:layout_margin="30dp"
            android:onClick="LEFT"/>

        <Button android:id="@+id/enter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:background="@color/colorAccent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/colorLight"
            android:text="OK"
            android:onClick="OK"
            />

        <Button android:id="@+id/right"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:background="@drawable/right"
            android:layout_margin="30dp"
            android:onClick="RIGHT"/>

        <Button android:id="@+id/down"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:background="@drawable/down"
            android:longClickable="true"
            android:onClick="DOWN"/>

    </GridLayout>

    <TextView
        android:id="@+id/currentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLight"
        android:textSize="13dp"
        android:text="current user"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>


</RelativeLayout>
